<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>


  <div class="form-label">
    <%= f.label :name %><br />
    <%= f.text_field :name, class:"form-control input-form" %>
  </div>

  <div class="form-label">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-form" %>
  </div>

  <div class="form-label">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control input-form" %>
  </div>

  <div class="form-label">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control input-form" %>
  </div>

  <div class="form-label">
<%= f.radio_button :role, "student", class:"form-check-input check-input-button" %>
<%= f.label :role_student, "Estudiante", class:"form-check-label check-input-button" %>
<%= f.radio_button :role, "mentor", class:"form-check-input check-input-button" %>
<%= f.label :role_mentor, "Mentor", class:"form-check-label" %>

  </div>




  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
