<h1><%= @roadmap.title %></h1>
<a href="<%= @roadmap.project_link %>" target="_blank">
  Click ac√° para acceder a su proyecto
</a>
<hr>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Checkpoint</th>
      <th scope="col">Completed</th>
    </tr>
  </thead>
  <% @roadmap.checkpoints.each do |checkpoint| %>
  <tbody>
    <tr>
      <th scope="row"> <%= checkpoint.id %> </th>
      <td onclick="location.href='<%= roadmap_checkpoint_path(@roadmap,checkpoint) %>'"> <%= checkpoint.title %> </td>
      <td>
      <% if checkpoint.completed_checkpoints.exists?(user_id: current_user.id) %>
        <%= button_to "Marcar como incompleto", roadmap_uncomplete_checkpoint_path(@roadmap,checkpoint_id: checkpoint.id), :class=> "btn btn-outline-light",:method => :delete %>
      <% else %>
        <%= button_to "Marcar como completo", roadmap_complete_checkpoint_path(@roadmap,checkpoint_id: checkpoint.id), :class=> "btn btn-outline-light",:method => :post %>
      <% end %>
      </td>
    </tr>    
  </tbody>
  <% end %>
</table>
