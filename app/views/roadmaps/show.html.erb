<h1><%= @roadmap.title %></h1>
<a href="<%= @roadmap.project_link %>" target="_blank">
  Click ac√° para acceder a su proyecto
</a>
<hr>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Checkpoint</th>
      <th scope="col">Completed</th>
    </tr>
  </thead>
  <% @roadmap.checkpoints.each do |checkpoint| %>
  <tbody>
    <tr>
      <th scope="row"> <%= checkpoint.id %> </th>
      <td><a href='<%= roadmap_checkpoint_path(@roadmap,checkpoint) %>' class="checkpoint-link" >
  <%= checkpoint.title %>
</a></td>
      
     
      <td>
      <% if checkpoint.completed_checkpoints.exists?(user_id: current_user.id) %>
        <%= button_to "Completo ‚úÖ", roadmap_uncomplete_checkpoint_path(@roadmap,checkpoint_id: checkpoint.id), :class=> "btn btn-outline-light active-checkpoint-button",:method => :delete %>
      <% else %>
        <%= button_to "Incompleto üëÆüèª‚Äç‚ôÇÔ∏è", roadmap_complete_checkpoint_path(@roadmap,checkpoint_id: checkpoint.id), :class=> "btn btn-outline-light",:method => :post %>
      <% end %>
      </td>
    </tr>    
  </tbody>
  <% end %>
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AddNewCheckpointModal">
  + Nuevo Checkpoint
</button>

<!-- Modal -->
<div class="modal fade" id="AddNewCheckpointModal" tabindex="-1" aria-labelledby="ModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">A√±ade un nuevo checkpoint</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: roadmap_create_checkpoint_path(@roadmap), model: Checkpoint, method: "post" do |form| %>
          <%= form.label :label_title, "T√≠tulo" %>
          <%= form.text_field :title, required: true %>
          <%= form.submit "Crear" %>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

