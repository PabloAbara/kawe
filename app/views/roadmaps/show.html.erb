<% if @roadmap %>
  <h1><%= @roadmap.title %></h1>
  <a href="<%= @roadmap.project_link %>">
    Click ac√° para acceder a su proyecto
  </a>

  <hr>

  <% @roadmap.checkpoints.each_with_index do |checkpoint, index| %>
